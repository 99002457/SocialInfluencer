<!doctype html>
<html lang="en">
  <head>
    <title>Register</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   <link rel="stylesheet" href="styles/RegisterAdvertiser.css">
</head>
  <body >
    <img src="images/background.jpg" class="back"/>
 
    <img src="images/appLogo.png" class="logo"/>
    <input type="text" placeholder="Username" class="user"/>
    <input type="text" placeholder="Password" class="pass"/>
    <input type="text" placeholder="Confirm Password" class="cpass"/>
    <input type="text" placeholder="Mobile Number" class="mnum"/>
   
    <select  class="comp" style="height:2.3rem !important; width: 20rem !important;  text-align:center; border-radius: 50px; border: none;">
        <option>Select Type of User</option>
        <option>Advertiser</option>
        <option>Influencer</option>
    </select>
   
    <div class="buttons p-1">
    <button type="button" class="btn btn-light  login-new ml-5">Register</button> 
    </div>
   <a href="login"><h4 class="not-block">Already have a account? Login here.</h4></a>
   
  
   <!-- Optional JavaScript -->
